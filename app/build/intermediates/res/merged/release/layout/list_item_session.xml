<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="@dimen/margin_xs">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical">

		<ImageView
			android:id="@+id/icon"
			android:layout_width="@dimen/icon_m"
			android:layout_height="@dimen/icon_m"
			android:scaleType="centerInside"
			android:padding="@dimen/icon_padding_l"
			android:src="@drawable/ic_time"/>

		<TextView
			android:id="@+id/t_code"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_m"
			android:textStyle="bold"
			android:text="00000"/>

		<TextView
			android:id="@+id/t_name"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_m"
			android:lines="1"
			android:layout_marginLeft="@dimen/margin_m"
			android:text="Session"/>

		<TextView
			android:id="@+id/t_added"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/margin_m"
			android:gravity="right"
			android:text="00.00.00"
			android:textSize="@dimen/text_s"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical">

		<ImageView
			android:layout_width="@dimen/icon_small"
			android:layout_height="@dimen/icon_small"
			android:scaleType="centerInside"
			android:src="@drawable/ic_rate"
			android:padding="@dimen/icon_padding_m"/>

		<TextView
			android:id="@+id/t_rate"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_s"/>

		<ImageView
			android:layout_width="@dimen/icon_small"
			android:layout_height="@dimen/icon_small"
			android:scaleType="centerInside"
			android:src="@drawable/ic_time"
			android:layout_marginLeft="@dimen/margin_m"
			android:padding="@dimen/icon_padding_m"/>

		<TextView
			android:id="@+id/t_duration"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_s"/>

		<ImageView
			android:layout_width="@dimen/icon_small"
			android:layout_height="@dimen/icon_small"
			android:scaleType="centerInside"
			android:src="@drawable/ic_money"
			android:layout_marginLeft="@dimen/margin_m"
			android:padding="@dimen/icon_padding_m"/>

		<TextView
			android:id="@+id/t_amount"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_s"/>

	</LinearLayout>


</LinearLayout>
